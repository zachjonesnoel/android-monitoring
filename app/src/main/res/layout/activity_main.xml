<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newrelic_light_gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sendRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/newrelic_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š New Relic Monitoring"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Demo Application"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:alpha="0.9" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Section - Below App Banner -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Status &amp; Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/newrelic_dark"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready to monitor your app..."
                    android:textSize="16sp"
                    android:textColor="@color/newrelic_text_gray"
                    android:minHeight="60dp"
                    android:gravity="center_vertical"
                    android:background="@color/newrelic_light_gray"
                    android:padding="12dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Network & Error Monitoring Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ Network &amp; Error Monitoring"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/newrelic_dark"
                    android:layout_marginBottom="12dp" />

                <!-- Two Column Grid for Buttons -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/getHttp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸ“¡ HTTP Request"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/info_blue"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/crashButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸ’¥ Crash"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/error_red"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/handledException"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸ”§ Exception"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/warning_orange"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/appNotResponding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="â³ ANR"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/newrelic_accent"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Custom Attributes Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ·ï¸ Custom Attributes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/newrelic_dark"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <Button
                        android:id="@+id/customAttribute1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸª Store ID"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/newrelic_secondary"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/customAttribute2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸ’° Rate"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/newrelic_secondary"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Events & Tracking Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Events &amp; Tracking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/newrelic_dark"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <Button
                        android:id="@+id/customEvent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸš— Custom Event"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/monitoring_purple"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/breadCrumb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="ðŸ“ Breadcrumb Panel"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/success_green"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Navigation Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§­ Navigation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/newrelic_dark"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/nextPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âž¡ï¸ Go to Next Page"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/newrelic_primary"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    android:layout_margin="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>